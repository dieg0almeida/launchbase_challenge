{% extends 'site/layout.njk'%}


{% block content %}
    <div class="cards">
        {% for item in items %}
            <div class="card" id="{{loop.index0}}">
                <div class="card__image">
                    <img src="{{item.image}}" alt="{{item.title}}">
                </div>
                <div class="card__title">{{item.title}}</div>
                <div class="card__author">por {{item.author}}</div>
            </div>
        {% endfor %}
    </div>
{% endblock content %}