{% extends 'site/layout.njk'%}


{% block content %}
    {% if search %}
      <h1>Buscando por
        "{{search}}"</h1>
    {% endif %}
    <div class="cards">
        {% for recipe in recipes %}
            <div class="card" id="{{recipe.id}}">
                <div class="card__image">
                    <img src="{{recipe.image}}" alt="{{recipe.title}}">
                </div>
                <div class="card__title">{{recipe.title}}</div>
                <div class="card__author">por {{recipe.chef_name}}</div>
            </div>
        {% endfor %}
    </div>
{% endblock content %}