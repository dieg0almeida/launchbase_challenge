{% extends 'admin/layout.njk' %}

{% block content %}
    <div class="container">
        <div class="header">
            <h1>Receita: {{recipe.title}}</h1>
            <a href="/admin/recipes/{{recipe.id}}/edit" class="button">Editar Receita</a>
        </div>
        <div class='recipe__header'>
            <img src="{{recipe.image}}" alt="{{recipe.title}}">
            <h1>{{recipe.title}}</h1>
            <h3>por {{recipe.chef_name}}</h3>
        </div>
        <div class='recipe__content__ingredients'>
            <h2>Ingredientes</h2>
            <ul>
              {% for ingredient in recipe.ingredients %}
                <li>{{ingredient}}</li>
              {% endfor %}
            </ul>
        </div>
        <div class='recipe__content__preparation'>
            <h2>Modo de preparo</h2>
            <ul>
              {% for step in recipe.preparation %}
                <li>{{step}}</li>
              {% endfor %}
            </ul>
        </div>
        <div class='recipe__content__info'>
            <h2>Informações adicionais</h2>
            <p>{{recipe.information}}</p>
        </div>
    </div>
{% endblock content %}