<div class="item">
    <h3>Email</h3>
    <div class="input">
        <input 
        type="email" 
        name="email" 
        placeholder="Digite seu email" 
        required="required" 
        value="{{user.email}}"
        >
    </div>
</div>

<div class="item">
    <h3>Nova Senha</h3>
    <div class="input">
        <input 
        type="password" 
        name="password" 
        placeholder="Digite sua nova senha" 
        required="required" >
    </div>
</div>

<div class="item">
    <h3>Repetir Senha</h3>
    <div class="input">
        <input 
        type="password" 
        name="passwordRepeat" 
        placeholder="Repita a nova senha" 
        required="required" >
    </div>
</div>

<input type="hidden" name="token" value={{token}}>