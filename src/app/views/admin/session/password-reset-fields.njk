<div class="fields">
    <div class="item">
        <div>Email</div>
        <div class="input">
            <input 
              type="email" 
              name="email"
              placeholder="Informe o seu email" 
              required="required" value="{{user.email}}" 
              onblur="Validate.apply(this, 'isEmail')"
            >
        </div>
    </div>
</div>

<div class="item">
    <div>Senha</div>
    <div class="input">
        <input 
          type="password" 
          name="password" 
          placeholder="Escolha uma nova senha" 
          required="required"
        >
    </div>
</div>

<div class="item">
    <div>Repita a senha</div>
    <div class="input">
        <input 
          type="password" 
          name="passwordRepeat" 
          placeholder="Repita a nova senha" 
          required="required"
        >
    </div>
</div>

<input type="hidden" name="token" value={{token}}>