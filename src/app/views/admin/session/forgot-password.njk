{% extends 'admin/session/layout.njk'%}

{% block content %}

    <section class='forgot-password container form'>
        <form action="/user/forgot-password" method="post">
            <div class="header">
                <h3>Esqueceu a sua senha?</h3>
            </div>

            <div class="fields">
                <div class="item">
                    <div>Email</div>
                    <div class="input">
                        <input 
                          type="email" 
                          name="email" 
                          placeholder="Informe o seu email" 
                          required="required" 
                          value="{{user.email}}" 
                          onblur="Validate.apply(this, 'isEmail')">
                    </div>
                </div>
            </div>

            <button class="button" type="submit">Recuperar Senha</button>
        </form>
    </section>

{% endblock content %}