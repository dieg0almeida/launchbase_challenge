{% extends 'admin/session/layout.njk'%}

{% block content %}

    <section class='forgot-password container form'>
        <form action="/forgot-password" method="post">
            <div class="header">
                <h3>Esqueceu a sua senha?</h3>
            </div>

            <div class="fields">
                <div class="item">
                    <h3>Email</h3>
                    <div class="input">
                        <input type="email" name="email" placeholder="Digite seu email" required="required" value="{{user.email}}" onblur="Validate.apply(this, 'isEmail')">
                    </div>
                </div>
            </div>

            <div style="text-align: end;">
              <button class="button" type="submit">Recuperar Senha</button>
            </div>
        </form>
    </section>

{% endblock content %}